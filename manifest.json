{
  "name": "ニコニコ動画 ワンクリックマイリスト",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "ワンクリックであらかじめ設定したマイリストに動画を登録できる拡張機能です。",
  "icons" : {
    "16" : "icon/icon16.png",
    "32" : "icon/icon32.png",
    "48" : "icon/icon48.png",
    "128" : "icon/icon128.png"
  },
  "browser_action": {
    "default_icon" : {
      "16" : "icon/icon16.png",
      "32" : "icon/icon32.png",
      "48" : "icon/icon48.png"
    },
    "default_title": "マイリスト設定",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "js": ["js/script.js"],
      "matches": ["https://www.nicovideo.jp/watch/*"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "permissions": [
    "cookies",
    "contextMenus",
    "notifications",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.nicovideo.jp/*"
  ]
}
